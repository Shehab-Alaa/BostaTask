<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBaseTV" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="AppBlackTV" parent="AppBaseTV">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppBlackBoldTV" parent="AppBlackTV">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="WhiteBorderTIL" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="WhiteBorderET" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_6sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_6sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_6sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_6sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/transparent_black</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:background">@drawable/white_border_til</item>
    </style>

    <style name="BaseAppBtn" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="YellowBlueBtn" parent="BaseAppBtn">
        <item name="android:minWidth">@dimen/_45sdp</item>
        <item name="android:minHeight">@dimen/_45sdp</item>
        <item name="android:background">@drawable/yellow_btn_bg</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="OrangeBlueBtn" parent="BaseAppBtn">
        <item name="android:minWidth">@dimen/_45sdp</item>
        <item name="android:minHeight">@dimen/_45sdp</item>
        <item name="android:background">@drawable/orange_btn_bg</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>